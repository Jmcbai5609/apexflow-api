# MongoDB Atlas Connection String
# Replace with your own MongoDB Atlas connection string
# Note: URL-encode special characters in password (@ becomes %40)
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/apexflow?retryWrites=true&w=majority

# Database name
DB_NAME=apexflow

# Data mode: 'demo' or 'live'
DATA_MODE=demo

# Signal mode: 'conservative', 'balanced', or 'aggressive'
SIGNAL_MODE=balanced

# Optional: Live data providers (only needed if DATA_MODE=live)
# POLYGON_API_KEY=your_polygon_api_key
# OANDA_API_KEY=your_oanda_api_key
# OANDA_ACCOUNT_ID=your_oanda_account_id
# OANDA_PRACTICE=true
